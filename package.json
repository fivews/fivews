{
  "name": "storycopter",
  "private": true,
  "license": "BSD-3-Clause",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "npx oao clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint-config-prettier": "6.4.0",
    "husky": "3.0.8",
    "lint-staged": "9.4.2"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
