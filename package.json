{
  "name": "storycopter",
  "private": true,
  "license": "BSD-3-Clause",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "npx rimraf **/node_modules/",
    "start": "yarn && npm rebuild"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint-config-prettier": "6.10.1",
    "husky": "4.2.3",
    "lint-staged": "10.1.2"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
