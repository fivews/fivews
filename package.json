{
  "name": "storycopter",
  "private": true,
  "license": "BSD-3-Clause",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint-config-prettier": "6.0.0",
    "husky": "3.0.5",
    "lint-staged": "9.2.5"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "prettier --write",
        "git add"
      ],
      "*.{md,html}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
